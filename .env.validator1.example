# Environment configuration for Validator 1
# Copy to .env and fill in the values

SEQUENCER_ID=validator1
P2P_PORT=9001
METRICS_PORT=8001

# Optional: Set a specific private key for consistent peer ID
# Use hex format (64 bytes = 128 hex characters) from key_generator
# Example: PRIVATE_KEY=c5251f3c090202f33ee6a526b4ababc9a7045c5d46ffb0e5efbb6c60b7655b8741d18c3acc98d5c44f7f2f642a01be2c1f47709bf818145c60b648fc38a9d1c6
# PRIVATE_KEY=your_hex_encoded_private_key_here

# Bootstrap node - REQUIRED
# Format: /ip4/<BOOTSTRAP_IP>/tcp/<BOOTSTRAP_PORT>/p2p/<BOOTSTRAP_PEER_ID>
# Example: /ip4/192.168.1.100/tcp/9100/p2p/12D3KooW...
BOOTSTRAP_MULTIADDR=

# Debug settings
LOG_LEVEL=info
DEBUG_MODE=false